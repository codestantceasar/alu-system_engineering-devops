#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user and listens on all IPs on port 8080

# Step 1: Update the Nginx configuration to run as nginx user
sed -i 's/user www-data;/user nginx;/g' /etc/nginx/nginx.conf

# Step 2: Update Nginx configuration to listen on all IPs on port 8080
sed -i 's/listen 80 default_server;/listen 0.0.0.0:8080 default_server;/g' /etc/nginx/sites-available/default

# Step 3: Restart Nginx to apply the changes
service nginx restart

# Step 4: Check if Nginx is running as the nginx user and listening on port 8080
ps aux | grep nginx
netstat -tuln | grep 8080
